[core]
  editor = nvim
  pager = delta

[init]
  defaultBranch = main

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true
    light = false
    side-by-side = true
    syntax-theme = "DarkNeon"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
